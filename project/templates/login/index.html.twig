{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

<title>Se connecter</title>
    <style>
    .divider:after,
.divider:before {
content: "";
flex: 1;
height: 1px;
background: #eee;
}
    </style>

    <!-- Section: Design Block -->
<section class="">
  <!-- Jumbotron -->
  <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="height:100vh;background-color: #f5f5f5">
    <div class="container">
      <div class="row gx-lg-5 align-items-center">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <h1 class="my-5 display-3 fw-bold ls-tight" style="color:#141c26">
             Bienvenue sur <br />
                      <img src="{{ asset('logo2.png') }}" width=300 height=55 alt="XLearn">

          </h1>
          <p style="color: hsl(217, 10%, 50.8%)">
            Veuillez saisir vos identifiants pour vous connecter à votre compte.
            Si vous n'avez pas encore de compte, veuillez vous inscrire.
            En cas de problème de connexion, veuillez contacter notre support technique.
                               

          </p>
        </div>

        <div class="col-lg-6 mb-5 mb-lg-0">
          <div class="card">
            <div class="card-body py-5 px-md-5">

              <form action="{{ path('app_login') }}" method="post">
                <!-- 2 column grid layout with text inputs for the first and last names -->


                <!-- Email input -->
                <div class="form-outline mb-4">
                                  <label class="form-label" for="username">Email</label>
                  <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}"/>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="password">Mot de passe</label>
                    <input type="password" id="password" class="form-control" name="_password" />
                </div>


                <!-- Submit button -->
                <button type="submit" class="btn btn-primary w-100 mb-4">
                  Se connecter
                </button>
                <hr>
                <!-- Register buttons -->
                <div class="text-center">
                  <a type="submit" class="btn btn-secondary w-100 mt-4" href='{{ path('app_register') }}'>
                  Créer un nouveau compte
                </a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->


         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>


    

{% endblock %}

