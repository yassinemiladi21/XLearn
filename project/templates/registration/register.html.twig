{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}


    {{ form_start(registrationForm) }}

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
    .divider:after,
.divider:before {
content: "";
flex: 1;
height: 1px;
background: #eee;
}
    </style>

    <!-- Section: Design Block -->
<section class="">
  <!-- Jumbotron -->
  <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="height:100vh;background-color: hsl(0, 0%, 96%)">
    <div class="container">
      <div class="row gx-lg-5 align-items-center">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <h1 class="my-5 display-3 fw-bold ls-tight">
            Bienvenue sur <br />
                      <img src="{{ asset('logo2.png') }}" width=300 height=55 alt="XLearn">
          </h1>
          <p style="color: hsl(217, 10%, 50.8%)">
            Veuillez saisir vos identifiants pour vous connecter à votre compte.
            Si vous n'avez pas encore de compte, veuillez vous inscrire.
            En cas de problème de connexion, veuillez contacter notre support technique.

          </p>
        </div>

        <div class="col-lg-6 mb-5 mb-lg-0">
          <div class="card">
            <div class="card-body py-5 px-md-5">

              <form action="{{ path('app_login') }}" method="post">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                {{ form_start(registrationForm) }}



                <div class="row mb-4">
                <div class="form-group col-md ">
                {{ form_label(registrationForm.name, 'Prénom') }}
                {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group col-md">
                {{ form_label(registrationForm.lastName, 'Nom') }}
                {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
                </div>
  
            </div>
                <div class="row mb-4">

            <div class="form-group col-md-6">
                {{ form_label(registrationForm.profession, 'Profession') }}
                {{ form_widget(registrationForm.profession, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col-md">
                {{ form_label(registrationForm.phone, 'Télephone') }}
                {{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control'}}) }}
            </div>
            </div>
                <!-- Email input -->
                <div class="form-outline mb-4">
                {{ form_label(registrationForm.email, 'Email',{'attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}

                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe',{'attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                </div>


                <div class="form-check">
                  <input class="form-check-input" type="radio" name="role" id="flexRadioDefault1" value="ROLE_INSTRUCTOR">
                  <label class="form-check-label" for="flexRadioDefault1">
                    Instructeur
                  </label>
                </div>
                <div class="form-check mb-2">
                  <input class="form-check-input" type="radio" name="role" id="flexRadioDefault2" value="ROLE_LEARNER" checked>
                  <label class="form-check-label" for="flexRadioDefault2">
                    Apprenant
                  </label>
                </div>
                <!-- Checkbox -->



                <!-- Submit button -->
                <button type="submit" class="btn btn-primary w-100 mb-4">
                  S'inscrire
                </button>
                <hr>
                <!-- Register buttons -->
                <div class="text-center">
                  <button type="submit" class="btn btn-secondary w-100 mt-4" onclick="window.location.href='{{ path('app_login') }}'">
                  Se connecter
                </button>
                </div>
              </form>
                  {{ form_end(registrationForm) }}

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->


         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>


        
{% endblock %}
