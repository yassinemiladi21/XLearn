{% extends 'base.html.twig' %}

{% block body %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

   <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css"
      integrity="sha512-wR4oNhLBHf7smjy0K4oqzdWumd+r5/+6QO/vDda76MW5iug4PT7v86FoEkySIJft3XA0Ae6axhIvHrqwm793Nw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.css"
      integrity="sha512-6lLUdeQ5uheMFbWm3CP271l14RsX1xtx+J5x2yeIDkkiBpeVTNhTqijME7GgRKKi6hCqovwCoBTlRBEC20M8Mg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

<style>

      .main {
        height: 90vh;
      }

      .main .image-container {
        width: 100vw;
        height: 90vh;
        overflow: hidden;
        display: flex;
      }


      .main img {

          max-width: inherit;
          max-height: inherit;
          height: inherit;
          width: inherit;
          object-fit: cover;
      }


      .main .course {
        border: none;
        padding: 2rem;
        min-height: 30rem;
        background: transparent;
        text-align: center;
        font-family: "Poppins";
      }
      /* .courses .course:hover {
  box-shadow: 2px 2px 15px #2b4068 inset;
} */
    
      .course-header {
        padding-bottom: 2rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .main .instructorImg {
        width: 50px;
        height: 50px;
        border-radius: 50px;
      }

      .course-foter {
        display:flex;
        gap: 2rem;
      }

      .course-foter div {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
      }

  
      .course-text {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
      }

      .buttons {
        align-self: flex-start;
      }

    .slick-prev:before,
    .slick-next:before {
        color: black;
    }

     .card-footer .instructorImg {
        width: 50px;
        height: 50px;
        border-radius: 50px;
      }

      .card-footer {
        display: flex;
        gap: 2rem;
        align-items: center;
      }

      .card-footer p {
        margin: 0;
      }



      .card-img-overlay {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 3rem;
      }

      .image-container {
  position: relative;
}

.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #023047;
  opacity: 0.6;
}

	.slick-dots {
		  text-align: center;
      position: relative !important;
      top: -3rem;
		}
		
		

		
		.slick-dots button {
		  display: none;
		}

    </style>

    <div class="main" style="margin-bottom:0">
    {% for i in 0..7 %}
    <div class="card bg-dark text-white">
  <div class="image-container">
  <img class="card-img img-responsive" src="https://wallpaperaccess.com/full/2581470.jpg" alt="Card image">
  <div class="overlay"></div>
  </div>
  <div class="card-img-overlay">
    <h1 class="card-title" style="color: white;width:60%; text-align:center; font-size:66px;font-weight: 500"><b>Votre Organisme de Formation Professionnelle</b></h1>
    <button class="btn" style="color:#023047; border-radius:10rem; width:25rem; height:5rem; font-size:32px; font-weight: bold; background-color: #ffb703">Inscrivez-vous</button>
  </div>
</div>
    {% endfor %}
     

     </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"
      integrity="sha512-XtmMtDEcNz2j7ekrtHvOVR4iwwaD6o/FUJe6+Zq+HgcCsk3kj4uSQQR8weQ2QVj1o0Pk6PwYLohm206ZzNfubg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>

    <script type="text/javascript">
      $('.main').slick({
  dots: true,
  arrows: false,
  infinite: false,
  speed: 750,
  autoplay: true
});
	
    </script>
{% endblock %}