    <style>

    .slick-prev::before, .slick-next::before {
	      color: black !important;
    }


    .category {
  width: 80%;
  margin: auto;
}

.slick-prev::before,
.slick-next::before {
  color: black;
}

.slick-dots {
  margin-top: -10px;
}

.cat {
  background-color: #ffb703;
  color:#141c26;
  padding: 14px 25px;
  border: 1px solid transparent;
  border-radius: 10px;
  text-align: center;
  text-decoration: none;
  font-size: 18px;
  margin: 2rem;
  opacity: 0.9;
}

.cat:hover,
.cat:visited,
.cat:active,
.cat:link {
  text-decoration: none;
  color: #ffffff;
}

.cat:hover {
  opacity: 0.8;
}
    
    </style>


    <div id="categories" style="padding: 2rem 0;background-color: #f5f5f5">
    <h1 style="text-align:center; color: #023047; font-weight: bold; font-variant: small-caps; font-size:3rem;">Cat√©gories</h1>
    <div class="category">

    {% for category in categories %}
    <a href="#" class="cat">
       <i class="fas fa-solid fa-code"></i> {{category |capitalize}}
    </a>

    {% endfor %}
     

     
    </div>
</div>
