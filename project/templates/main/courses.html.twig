<style>

  .slider {
    width: 80%;
    margin: auto;
  }

  .course {
    
    border: 2px solid #141c26;
    border-radius: 1rem;
    max-width: 20rem;
    margin: 3rem;
  }

  .course p {
  
  }

  .course-header {
        padding:0;
        max-width: inherit;
        height: 13rem;
        overflow: hidden;
        display: flex;
        border-top-left-radius: 0.85rem;
          border-top-right-radius: 0.85rem;
          background-color: white;

  }

  .course-header img {
          max-width: inherit;
          max-height: inherit;
          height: inherit;
          width: inherit;
          object-fit: cover;
          

  }

  .course-body {
        background-color: #023047;
        opacity: 0.9;
        border-bottom-right-radius: 0.85rem;
        border-bottom-left-radius: 0.85rem;

  }

  .course-body span {
    color: #ffb703;
  }

  .course-title {
    height: 3.5rem;
